---
import ContactForm from './ContactForm.astro';
---
<section id="servicios" class="section">
    <h2 class="section-title">¿Tienes una deuda estudiantil? Contáctanos</h2>
    <ContactForm />
</section>

<style>
    .section {
        margin-bottom: 4rem;
    }

    .section-title {
        color: var(--color-red);
        margin-bottom: 2rem;
        text-align: center;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .service-card {
        background: var(--color-white);
        border: 1px solid var(--color-gray);
        border-radius: 8px;
        padding: 2rem;
        transition: transform 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>
