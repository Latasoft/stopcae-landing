<footer>
    <div class="container">
        <div class="social-links">
            <a href="https://www.instagram.com/stopcae/" class="social-link" target="_blank">
                <i class="fab fa-instagram"></i>
            </a>
        </div>
        <p>© 2025 STOP CAE - Todos los derechos reservados</p>
    </div>
</footer>

<style>
    footer {
        background-color: var(--color-dark);
        color: var(--color-white);
        text-align: center;
        padding: 2rem 0;
        margin-bottom: 0;
        width: 100%;
        position: relative;
        bottom: 0;
        left: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .social-links {
        margin-bottom: 2rem;
    }

    .social-link {
        color: var(--color-red);
        font-size: 2rem;
        transition: color 0.3s ease;
    }

    .social-link:hover {
        color: var(--color-red-bright);
    }
    
    /* Estilos globales para eliminar espacio al final de la página */
    :global(body) {
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    
    :global(main) {
        flex: 1 0 auto;
    }
</style>

<script>
    // Asegurarse de que el footer siempre esté al final
    document.addEventListener('DOMContentLoaded', () => {
        const body = document.body;
        const footer = document.querySelector('footer');
        
        // Ajustar la altura de la página si es necesario
        function adjustFooterPosition() {
            const bodyHeight = body.clientHeight;
            const windowHeight = window.innerHeight;
            
            if (bodyHeight < windowHeight) {
                footer.style.marginTop = `${windowHeight - bodyHeight}px`;
            } else {
                footer.style.marginTop = '0';
            }
        }
        
        // Ejecutar al cargar y al cambiar tamaño de ventana
        adjustFooterPosition();
        window.addEventListener('resize', adjustFooterPosition);
    });
</script>
