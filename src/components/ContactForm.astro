<div class="contact-form">
    <div class="form-container overlay">
        <h2>Contacta con nosotros</h2>
        
        <!-- Ejemplo de imagen con el mismo tamaño que testimonios -->
        <!-- 
        <div class="contact-form-image-container">
            <img src="/ruta-a-tu-imagen.jpg" alt="Descripción de la imagen" class="contact-form-image">
        </div>
        -->
        
        <form id="stopForm" class="stop-form">
            <div class="form-options">
                <label class="option">
                    <input type="radio" name="status" value="pagando" required>
                    <span>Estoy pagando mi CAE</span>
                </label>
                <label class="option">
                    <input type="radio" name="status" value="nopagando">
                    <span>Ya dejé de pagar</span>
                </label>
            </div>

            <div class="form-fields">
                <input type="text" name="nombre" placeholder="Nombre completo" required>
                <input type="email" name="correo" placeholder="Correo electrónico" required>
                <input type="tel" name="telefono" placeholder="Teléfono" required>
                <textarea name="comentario" placeholder="Cuéntanos tu situación"></textarea>
            </div>

            <button type="submit" class="submit-button">Quiero decir <img src="/stop.png" alt="Logo" class="stop-logo" /></button>
        </form>
    </div>
</div>

<style>

      .stop-logo {
        display: inline-block;
        height: 3rem;        /* ajusta según prefieras */
        width: auto;
        margin-left: 0.5rem;
        margin-bottom: 0.5rem;      /* corregido */
        vertical-align: middle;
        transition: transform 0.25s ease;
        opacity: 1;
        pointer-events: none;  /* evita dobles eventos5 */
    }

    .stop-logo:hover {
        transform: scale(1.08);
        filter: drop-shadow(0 0 8px rgba(202, 1, 1, 0.6));
    }

    .contact-form {
        color: var(--color-white);
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;

    }

    .overlay {
        background-color: var(--color-red);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        color: var(--color-white);
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        width: 100%;
        color: #393939;
    }

    h2, h3 {
        text-align: center;
        margin: 0;
        color: white;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        font-weight: 800;
        letter-spacing: -0.02em;
    }

    h2 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        margin-bottom: 1.5rem;
        font-weight: 800;
        line-height: 1.2;
        text-align: center;
        color: var(--color-white);
    }

    h3 {
        font-size: 1.8rem;
        margin-bottom: 2rem;
        font-weight: 600;
        opacity: 0.95;
    }

    .stop-form {
        background: linear-gradient(30deg, #FFFBFB 0%, #E8E5E5 50%,#E8E5E5 75%, #E0DCDC 100%);
        padding: 3rem;
        border-radius: 12px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 30px rgba(57, 57, 57, 0.15);
        border: 2px solid rgba(202, 1, 1, 0.1);
        color: #393939;
        margin-top: 2rem;
        transition: all 0.3s ease;
    }

    .stop-form:hover {
        transform: translateY(-3px);
        box-shadow: 0 30px 60px rgba(57, 57, 57, 0.25);
        border-color: rgba(202, 1, 1, 0.2);
    }

    .form-options {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
        padding: 0.5rem;
    }

    .option {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        cursor: pointer;
        padding: 1rem 1.8rem;
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid rgba(202, 1, 1, 0.3);
        border-radius: 30px;
        transition: all 0.3s ease;
        color: #393939;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
    }

    .option:hover {
        background: rgba(255, 255, 255, 1);
        border-color: rgba(202, 1, 1, 0.7);
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .option input[type="radio"] {
        appearance: none;
        -webkit-appearance: none;
        width: 22px;
        height: 22px;
        border: 2px solid rgba(202, 1, 1, 0.5);
        border-radius: 50%;
        outline: none;
        position: relative;
        margin: 0;
        cursor: pointer;
        transition: all 0.3s ease;
        background-color: white;
    }
    
    .option input[type="radio"]:checked {
        border-color: #CA0101;
        background-color: white;
    }
    
    .option input[type="radio"]:checked::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #CA0101;
        animation: pulse 0.3s ease-out;
    }
    
    .option input[type="radio"]:checked + span {
        color: #CA0101;
        font-weight: 700;
    }
    
    .option span {
        transition: all 0.3s ease;
    }
    
    @keyframes pulse {
        0% { transform: translate(-50%, -50%) scale(0); opacity: 0; }
        50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.7; }
        100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
    }

    .form-fields {
        display: grid;
        gap: 1rem;
    }

    input, textarea {
        width: 100%;
        padding: 1rem;
        border: 2px solid rgba(202, 1, 1, 0.2);
        border-radius: 8px;
        background: rgba(255, 251, 251, 0.9);
        color: #393939;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    input:focus, textarea:focus {
        outline: none;
        border-color: #CA0101;
        background: #FFFBFB;
        box-shadow: 0 0 0 3px rgba(202, 1, 1, 0.1);
    }

    input::placeholder, textarea::placeholder {
        color: rgba(57, 57, 57, 0.6);
    }

    textarea {
        height: 100px;
        resize: vertical;
    }

    .submit-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, #CA0101 0%, #E30613 100%);
        color: #FFFBFB;
        border: none;
        padding: 1.05rem 1.25rem;
        font-size: 1.05rem;
        font-weight: 700;
        border-radius: 25px;
        cursor: pointer;
        width: 100%;            /* puedes quitar si no quieres full-width */
        margin-top: 1.5rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 8px 25px rgba(202, 1, 1, 0.25);
        border: 2px solid rgba(202, 1, 1, 0.3);
    }

    .submit-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(202, 1, 1, 0.4);
        border-color: rgba(255, 251, 251, 0.4);
    }

    .submit-button:active {
        transform: translateY(-1px);
    }

    /* Estilos para imágenes del ContactForm - mismo tamaño que testimonios */
    .contact-form-image-container {
        width: 100%;
        height: 292.5px; /* 65% de 450px (altura de testimonios) */
        overflow: hidden;
        position: relative;
        background-color: #f5f5f5;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .contact-form-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.5s ease;
        background-color: #f5f5f5;
    }

    .contact-form-image-container:hover .contact-form-image {
        transform: scale(1.05);
    }

    /* Responsive para imágenes */
    @media (max-width: 768px) {
        .contact-form-image-container {
            height: 270px; /* 60% de 450px para móviles, igual que testimonios */
        }
    }
</style>

