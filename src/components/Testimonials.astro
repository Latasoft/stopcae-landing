<style>
    .testimonials {
        padding: 2rem;
        position: relative;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        color: var(--color-white);
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow: hidden;
    }

    .overlay {
        background-color: var(--color-red);
    }

    .section-title {
        color: var(--color-white);
        margin: 0 auto 3rem auto;
        text-align: center;
        font-size: 2.5rem;
        font-weight: 800;
        position: relative;
        display: inline-block;
        width: 100%;
        padding-bottom: 1rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background-color: rgba(255, 255, 255, 0.6);
        border-radius: 2px;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
    }

    .testimonial-card {
        background: linear-gradient(135deg, rgba(250, 250, 250, 0.9) 0%, rgba(240, 240, 240, 0.9) 100%);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(255, 255, 255, 0.5);
        position: relative;
        padding: 1.8rem;
        display: flex;
        flex-direction: column;
    }

    .testimonial-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 0;
        background: linear-gradient(135deg, rgba(202, 1, 1, 0.05) 0%, rgba(202, 1, 1, 0.02) 100%);
        transition: height 0.5s ease;
        z-index: 0;
    }

    .testimonial-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
        border-color: rgba(202, 1, 1, 0.2);
    }

    .testimonial-card:hover::before {
        height: 100%;
    }

    .testimonial-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: var(--color-red);
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 1.5rem;
        font-size: 2rem;
        color: white;
        box-shadow: 0 5px 15px rgba(202, 1, 1, 0.3);
        position: relative;
        z-index: 2;
    }

    .avatar-text {
        position: relative;
        z-index: 3;
    }

    .testimonial-content {
        position: relative;
        z-index: 2;
        flex: 1;
    }

    

    blockquote {
        margin: 0 0 1.5rem 0;
        font-style: italic;
        color: var(--color-dark);
        line-height: 1.6;
        font-size: 1rem;
        position: relative;
        padding-left: 1.5rem;
        border-left: 3px solid var(--color-red);
        transition: all 0.3s ease;
    }

    .testimonial-card:hover blockquote {
        color: #000;
    }

    .testimonial-info {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .testimonial-name {
        margin: 0;
        font-weight: 700;
        color: var(--color-red);
        font-size: 1.1rem;
    }

    .testimonial-role {
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }

    @keyframes fadeInTestimonial {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .testimonial-card:nth-child(1) {
        animation: fadeInTestimonial 0.6s ease-out 0.1s forwards;
        opacity: 0;
    }

    .testimonial-card:nth-child(2) {
        animation: fadeInTestimonial 0.6s ease-out 0.3s forwards;
        opacity: 0;
    }

    .testimonial-card:nth-child(3) {
        animation: fadeInTestimonial 0.6s ease-out 0.5s forwards;
        opacity: 0;
    }

    .testimonial-card:nth-child(4) {
        animation: fadeInTestimonial 0.6s ease-out 0.7s forwards;
        opacity: 0;
    }

    @media (max-width: 768px) {
        .testimonials-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
