<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Detectar si es un dispositivo m√≥vil real (no solo por tama√±o de pantalla)
        const isMobileDevice = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        
        // Funci√≥n para cambiar im√°genes seg√∫n tama√±o de pantalla
        function updateSliderImages() {
            const slideImages = document.querySelectorAll('.slide-image');
            const isDesktop = window.innerWidth >= 1024;
            
            slideImages.forEach((img) => {
                const imgElement = img as HTMLImageElement;
                if (isDesktop) {
                    // Usar im√°genes de desktop (.webp y .png)
                    imgElement.src = imgElement.getAttribute('data-desktop-src') || imgElement.src;
                } else {
                    // Usar im√°genes de mobile (.jpeg)
                    imgElement.src = imgElement.getAttribute('data-mobile-src') || imgElement.src;
                }
            });
        }
        
        // Ejecutar al cargar la p√°gina
        updateSliderImages();
        
        // Ejecutar cuando cambie el tama√±o de ventana
        let resizeTimeout: NodeJS.Timeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(updateSliderImages, 250);
        });
        
        // Aplicar clase espec√≠fica para dispositivos m√≥viles reales
        if (isMobileDevice) {
            document.body.classList.add('real-mobile-device');
            
            // Iniciar animaciones manualmente
            const animatedElements = document.querySelectorAll('.title-line, .animate-on-scroll');
            animatedElements.forEach(el => {
                // Forzar repintado
                (el as HTMLElement).style.display = 'none';
                setTimeout(() => {
                    (el as HTMLElement).style.display = '';
                    // Aplicar clase para activar animaci√≥n
                    el.classList.add('mobile-animated');
                }, 10);
            });
        }
    });

    const slides = document.querySelectorAll('.slide');
    const indicators = document.querySelectorAll('.indicator');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');
    let currentSlide = 0;

    function showSlide(index: number) {
        // Ocultar todas las slides
        slides.forEach((slide) => slide.classList.remove('active'));
        indicators.forEach((indicator) => indicator.classList.remove('active'));
        
        // Mostrar la slide actual
        slides[index].classList.add('active');
        indicators[index].classList.add('active');
        
        currentSlide = index;
    }

    function nextSlide() {
        const nextIndex = (currentSlide + 1) % slides.length;
        showSlide(nextIndex);
    }

    function prevSlide() {
        const prevIndex = currentSlide === 0 ? slides.length - 1 : currentSlide - 1;
        showSlide(prevIndex);
    }

    // Event listeners para controles
    if (prevBtn) prevBtn.addEventListener('click', prevSlide);
    if (nextBtn) nextBtn.addEventListener('click', nextSlide);

    // Los indicadores ya no son clickeables - removido event listener

    // Iniciar el slider
    showSlide(0);
    
    // Auto-play con intervalo
    const autoPlay = setInterval(nextSlide, 5000);
    
    // Pausar auto-play al hacer hover sobre controles (solo botones prev/next)
    const controls = [prevBtn, nextBtn];
    controls.forEach(control => {
        if (control) {
            control.addEventListener('mouseenter', () => clearInterval(autoPlay));
            control.addEventListener('mouseleave', () => setInterval(nextSlide, 5000));
        }
    });

    // Scroll to form functionality
    const scrollToFormBtn = document.getElementById('scroll-to-form');
    if (scrollToFormBtn) {
        scrollToFormBtn.addEventListener('click', (e) => {
            e.preventDefault();
            const formSection = document.getElementById('contacto-form');
            if (formSection) {
                const offsetTop = formSection.offsetTop;
                window.scrollTo(0, offsetTop);
            }
        });
    }

    // Form submission handler
    const form = document.getElementById('stopForm') as HTMLFormElement | null;
    
    // Importar EmailJS din√°micamente
    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Obtener el bot√≥n de env√≠o
            const submitBtn = form.querySelector('.submit-button') as HTMLButtonElement | null;
            if (!submitBtn) return;
            const originalText = submitBtn.innerHTML;
            
            // Cambiar estado del bot√≥n a "enviando"
            submitBtn.innerHTML = 'Enviando... <img src="/stop.png" alt="Logo" class="stop-logo" />';
            submitBtn.disabled = true;
            
            try {
                // Importar m√≥dulos din√°micamente
                const [emailjs] = await Promise.all([
                    import('@emailjs/browser')
                ]);
                
                // Recopilar datos del formulario
                const formData = {
                    nombre: (form.querySelector('[name="nombre"]') as HTMLInputElement | null)?.value ?? '',
                    email: (form.querySelector('[name="correo"]') as HTMLInputElement | null)?.value ?? '',
                    telefono: (form.querySelector('[name="telefono"]') as HTMLInputElement | null)?.value ?? '',
                    servicio: (form.querySelector('[name="servicio"]') as HTMLInputElement | null)?.value ?? 'plan-excepcion',
                    status: (form.querySelector('[name="status"]:checked') as HTMLInputElement | null)?.value || 'No especificado',
                    mensaje: (form.querySelector('[name="comentario"]') as HTMLTextAreaElement | null)?.value || 'Consulta desde Hero Slider - Plan Excepci√≥n',
                    time: new Date().toLocaleString('es-CL', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    })
                };

                // Enviar email usando EmailJS directamente, sin await ni manejo de response
                emailjs.default.send(
                    "service_fzy350f",
                    "template_xj4r7td",
                    formData,
                    "Q5Qu6LefKc48raJFh"
                );

                alert('¬°Gracias por tu consulta! Nos pondremos en contacto contigo en menos de 24 horas para ayudarte con tu Plan Excepci√≥n.');
                form.reset();
                form.querySelectorAll('input, textarea').forEach(field => {
                    if (field instanceof HTMLInputElement || field instanceof HTMLTextAreaElement) {
                        field.style.borderColor = 'rgba(202, 1, 1, 0.1)';
                    }
                });
            } catch (error) {
                console.error('Error al enviar el formulario:', error);
                alert('Hubo un error al enviar el formulario. Por favor, intenta nuevamente.');
            } finally {
                // Restaurar bot√≥n
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });
    }
    
// Optimizaciones adicionales para dispositivos m√≥viles
    if ('ontouchstart' in window) {
        // Prevenir zoom en inputs en iOS
        const inputs = document.querySelectorAll('input, textarea');
        inputs.forEach(input => {
            if (input instanceof HTMLInputElement || input instanceof HTMLTextAreaElement) {
                input.addEventListener('focus', () => {
                    if (input.style.fontSize === '16px') return;
                    input.style.fontSize = '16px';
                });
            }
        });
        
        // Optimizar el viewport para dispositivos m√≥viles
        const viewport = document.querySelector('meta[name="viewport"]');
        if (viewport) {
            viewport.setAttribute('content', 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no');
        }
        
        // Mejorar el rendimiento en dispositivos t√°ctiles
        document.body.style.touchAction = 'manipulation';
        
        // Optimizar las transiciones para dispositivos m√≥viles
        const style = document.createElement('style');
        style.textContent = `
            @media (max-width: 768px) {
                * {
                    -webkit-backface-visibility: hidden;
                    backface-visibility: hidden;
                }
            }
        `;
        document.head.appendChild(style);
    }
</script>

