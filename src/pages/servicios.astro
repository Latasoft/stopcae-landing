---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import ContactForm from '../components/ContactForm.astro';
import CaeDescription from '../components/CaeDescription.astro';
import Testimonials from '../components/Testimonials.astro';
---

<Layout>
    <Header />
    
    <main class="servicios-page">
        <section class="services-header">
                <h1>Servicios</h1>
        </section>
        
        <section class="servicios-content">
            <div class="form-background">
                <div class="container">
                    <h3 class="form-heading">Porque estudiar no deber√≠a costarte tu futuro</h3>
                    <div class="form-wrapper">
                        <ContactForm />
                    </div>
                </div>
            </div>
            
            <div class="servicios-background">
                <div class="container">
                    <CaeDescription />
                </div>
            </div>

            <div class="form-background">
                <div class="container">
                    <h3 class="form-heading">Testimonios</h3>

                    <div class="testimonials-wrapper">
                        <Testimonials />
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <Footer />
    <WhatsAppButton />
</Layout>

<script>
    // Disable scroll snapping for servicios page
    document.addEventListener('DOMContentLoaded', () => {
        // Override body scroll behavior
        document.body.style.scrollSnapType = 'none';
        
        // Override all sections in this page
        const sections = document.querySelectorAll('.servicios-page section');
        sections.forEach(section => {
            section.style.scrollSnapAlign = 'none';
            section.style.minHeight = 'auto';
            section.style.height = 'auto';
            section.style.display = 'block';
            section.style.justifyContent = 'flex-start';
            section.style.overflow = 'visible';
        });
        
        // Override container sections
        const containerSections = document.querySelectorAll('.servicios-page .container section');
        containerSections.forEach(section => {
            section.style.minHeight = 'auto';
            section.style.display = 'block';
            section.style.justifyContent = 'flex-start';
        });
    });
</script>

<style>
    /* Override global CSS rules that break responsivity */
    .servicios-page {
        padding-top: 90px; /* Space for fixed header */
        /* Disable scroll snapping for this page */
        scroll-snap-type: none;
    }
    
    /* Override global section rules for servicios page */
    .servicios-page section {
        min-height: auto !important;
        height: auto !important;
        scroll-snap-align: none !important;
        display: block !important;
        justify-content: flex-start !important;
        padding: 2rem 0 !important;
        margin: 0 !important;
        overflow: visible !important;
    }
    
    /* Override global body scroll behavior for this page */
    .servicios-page body {
        scroll-snap-type: none !important;
    }
    
    /* Override global container section rules */
    .servicios-page .container section {
        min-height: auto !important;
        display: block !important;
        justify-content: flex-start !important;
    }

    .services-header h2 {
        text-align: center;
        margin: 0;
        color: white;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        font-weight: 800;
        letter-spacing: -0.02em;
    }
    
    .services-header p {
        font-size: 0.5rem;
        max-width: 600px;
        margin: 0 auto;
        color: var(--color-dark);
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem 1rem;
    }
    
    .servicios-content {
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    
    .servicios-background {
        background-color: #E8E5E5;
        padding: 4rem 0;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }
    
    .form-wrapper {
        background-color: transparent;
        margin-left: -1rem;
        margin-right: -1rem;
        padding: 2rem;
        margin-bottom: 3rem;
        width: calc(100% + 2rem);
        max-width: calc(100% + 2rem);
        display: flex;
        justify-content: center;
    }
    
    .form-heading {
        text-align: center;
        margin: 0 0 2rem 0;
        color: white;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        font-weight: 800;
        letter-spacing: -0.02em;
        font-size: clamp(2rem, 5vw, 3rem);
        line-height: 1.2;
        position: relative;
        padding: 0.5rem 0;
    }
    
    .form-heading::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background-color: rgba(255, 255, 255, 0.6);
        border-radius: 2px;
    }
    
    .testimonials-section {
        color: var(--color-white);
        padding: 2rem;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 10;
        margin: 2rem auto;
        border-radius: 12px;
    }

    .overlay {
        background-color: var(--color-red);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        color: var(--color-white);
    }

    .testimonials-heading {
        text-align: center;
        margin: 0 0 2rem 0;
        color: white;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        font-weight: 800;
        letter-spacing: -0.02em;
        font-size: clamp(2rem, 5vw, 3rem);
        line-height: 1.2;
        position: relative;
        padding: 0.5rem 0;
    }
    
    .testimonials-heading::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background-color: rgba(255, 255, 255, 0.6);
        border-radius: 2px;
    }
    
    .testimonials-wrapper {
        margin-top: 3rem;
        width: 100%;
    }
    
    /* Responsive styles for servicios page */
    @media (max-width: 768px) {
        .servicios-page {
            padding-top: 80px;
        }
        
        .servicios-content {
            gap: 2rem;
        }
        
        .servicios-background {
            padding: 2rem 0;
        }
        
        .form-wrapper {
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .form-heading {
            font-size: clamp(1.5rem, 4vw, 2.5rem);
        }
        
        .container {
            padding: 1rem 0.8rem;
        }
    }
    
    @media (max-width: 480px) {
        .servicios-page {
            padding-top: 70px;
        }
        
        .servicios-content {
            gap: 1.5rem;
        }
        
        .servicios-background {
            padding: 1.5rem 0;
        }
        
        .form-wrapper {
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .form-heading {
            font-size: clamp(1.3rem, 3.5vw, 2rem);
        }
        
        .container {
            padding: 0.8rem 0.6rem;
        }
    }
    
    @media (max-width: 360px) {
        .servicios-page {
            padding-top: 60px;
        }
        
        .servicios-content {
            gap: 1rem;
        }
        
        .servicios-background {
            padding: 1rem 0;
        }
        
        .form-wrapper {
            padding: 0.8rem;
            margin-bottom: 1rem;
        }
        
        .form-heading {
            font-size: clamp(1.1rem, 3vw, 1.8rem);
        }
        
        .container {
            padding: 0.6rem 0.5rem;
        }
    }
</style>
