<style>
    .faq-page {
        min-height: 100vh;
        background: linear-gradient(135deg, rgb(248, 249, 250) 0%, rgb(233, 236, 239) 100%);
        scroll-margin-top: 120px;
    }

    .faq-header {
        padding: clamp(6rem, 15vh, 12rem) 0 2rem 0;
        background: linear-gradient(135deg, #393939 0%, #2d2d2d 100%);
        position: relative;
        overflow: hidden;
        min-height: 50vh;
        display: flex;
        align-items: center;
    }

    .faq-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(202, 1, 1, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(227, 6, 19, 0.08) 0%, transparent 50%);
        pointer-events: none;
    }

    .banner-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
    }

    .banner-illustration {
        flex: 0 0 300px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .illustration-placeholder {
        width: 200px;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(202, 1, 1, 0.3);
    }

    .banner-content {
        flex: 1;
        color: white;
    }

    .banner-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        position: relative;
    }

    .banner-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 100px;
        height: 5px;
        background: linear-gradient(90deg, #CA0101, #E30613);
        border-radius: 3px;
    }

    .banner-subtitle {
        font-size: clamp(1.2rem, 2.5vw, 1.8rem);
        color: #E0DCDC;
        opacity: 0.9;
        line-height: 1.4;
    }

    .faq-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 10px;
        background: linear-gradient(90deg, #CA0101, #E30613, #E0DCDC);
    }

    .faq-content-section {
        padding: 6rem 0;
        background: linear-gradient(135deg, rgb(248, 249, 250) 0%, rgb(233, 236, 239) 100%);
        color: #393939;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(202, 1, 1, 0.08);
    }

    .faq-content-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(202, 1, 1, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(227, 6, 19, 0.06) 0%, transparent 50%);
        pointer-events: none;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
    }

    .section-title {
        text-align: center;
        font-size: clamp(2.5rem, 4vw, 3.5rem);
        color: #F5F5F5;
        margin-bottom: 4rem;
        font-weight: 700;
        position: relative;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #CA0101, #E30613);
        border-radius: 2px;
    }



    .faq-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .faq-item {
        background: rgba(255, 255, 255, 0.98);
        padding: 3.5rem 2.5rem;
        border-radius: 24px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(202, 1, 1, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .faq-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #CA0101, #E30613);
        transform: scaleX(0);
        transition: transform 0.4s ease;
    }

    .faq-item:hover::before {
        transform: scaleX(1);
    }

    .faq-item:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.12);
        border-color: rgba(202, 1, 1, 0.15);
    }

    .faq-question {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .faq-question h3 {
        color: #CA0101;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        line-height: 1.3;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        position: relative;
    }

    .faq-question h3::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 3px;
        background: linear-gradient(90deg, #CA0101, #E30613);
        border-radius: 2px;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .faq-item:hover .faq-question h3::after {
        opacity: 1;
        width: 60px;
    }

    .faq-icon {
        font-size: 3.5rem;
        color: #CA0101;
        opacity: 0.8;
        transition: all 0.3s ease;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
    }

    .faq-item:hover .faq-icon {
        opacity: 1;
        transform: scale(1.1);
        filter: drop-shadow(0 6px 12px rgba(0, 0, 0, 0.15));
    }

    .faq-answer p {
        color: #393939;
        line-height: 1.8;
        margin: 0;
        font-size: 1.1rem;
        text-align: left;
    }

    @media (max-width: 768px) {
        .banner-container {
            flex-direction: column;
            text-align: center;
            gap: 2rem;
        }

        .banner-illustration {
            flex: none;
        }

        .banner-title::after {
            left: 50%;
            transform: translateX(-50%);
        }

        .faq-header {
            padding: clamp(5rem, 12vh, 8rem) 0 1rem 0;
        }

        .faq-content-section {
            padding: 4rem 0;
        }

        .section-title {
            font-size: clamp(2rem, 5vw, 2.5rem);
            margin-bottom: 3rem;
        }

        .faq-intro-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
        }
        
        .faq-intro-card {
            padding: 2.5rem 1.5rem;
        }
        
        .faq-intro-card h3 {
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
        }
        
        .faq-intro-card p {
            font-size: 1rem;
            line-height: 1.6;
        }
        
        .faq-intro-card .card-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }

        .faq-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
            padding: 0 1rem;
        }

        .faq-item {
            padding: 2.5rem 1.5rem;
        }

        .faq-question {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

        .faq-question h3 {
            font-size: 1.4rem;
            margin-bottom: 1rem;
        }

        .faq-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .faq-answer p {
            font-size: 1rem;
            line-height: 1.6;
        }
    }
</style>

